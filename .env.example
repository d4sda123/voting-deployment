# Production Environment Configuration
# Copy this file to .env and update with your production values

# Database Configuration (Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=voting
POSTGRES_HOST_AUTH_METHOD=scram-sha-256
POSTGRES_INITDB_ARGS=--auth-host=scram-sha-256

# Application Port
APP_PORT=3000

# Database URL (automatically constructed in docker-compose.yml)
# DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/voting?schema=public

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=15m

# Password Reset Configuration
PASSWORD_RESET_EXPIRES_IN=1h
PASSWORD_RESET_URL=http://localhost:8100/login/reset

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8100,https://yourdomain.com

# SMTP Configuration (optional - for email notifications)
SMTP_HOST=smtp-relay.sendinblue.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Seed Configuration - Initial Data
ASSOCIATION_NAME=Colegio de Ingenieros del Perú
BRANCH_NAME=Lima
SPECIALTY_NAME=Ingeniería de Sistemas
CHAPTER_NAME=Sistemas

# Admin User Configuration
ADMIN_DNI=00000001
ADMIN_PASSWORD=Admin123!
ADMIN_EMAIL=admin@example.com
ADMIN_PHONE=999999999
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
